{
  "name": "p2p-flipchart",
  "version": "0.1.0",
  "description": "BIY (Build it yourself) a P2P Flipchart",
  "main": "index.js",
  "scripts": {
    "build": "browserify src/index.js -d -o public/index.bundle.js",
    "build:watch": "watchify src/index.js -d -o public/index.bundle.js -v",
    "start": "npm run build && npm run start:server",
    "start:server": "serve public",
    "update:ipfs": "wget https://unpkg.com/ipfs/dist/index.js -O public/ipfs.bundle.js"
  },
  "license": "MIT",
  "dependencies": {
    "browserify": "^16.2.2",
    "d3": "^5.5.0",
    "serve": "^9.4.0",
    "watchify": "^3.11.0",
    "y-array": "^10.1.4",
    "y-indexeddb": "^8.1.9",
    "y-ipfs-connector": "^2.3.0",
    "y-memory": "^8.0.9",
    "yjs": "^12.3.3"
  }
}
